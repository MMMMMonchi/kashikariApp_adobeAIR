////////////////////////////////////////////////////////////////////////入力可能なテキストフィールドの生成するメソッド//////////////////////////////////////////////////////////////////////package common {	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFieldType;	public class InputTextFieldBase extends Sprite{				private var _inputTextFieldWidth:int;		private var _inputTextFieldHeight:int;		private const _backgroundMargin:int = 10;				public var _inputTextField:TextField;		private var _defaultText:String;		private var _fontSize:int;		private var _fontColor:uint;		public function InputTextFieldBase(width:int, height:int, defaultText:String = "", size:int = 12, color:uint = 0xeeeeee) {			_inputTextFieldWidth = width;			_inputTextFieldHeight = height;			_defaultText = defaultText;			_fontSize = size;			_fontColor = color;						makeContents();		}				private function makeContents():void {			graphics.beginFill(0xeeeeee, 0.5);			graphics.drawRoundRect(0, 0, _inputTextFieldWidth + _backgroundMargin * 2, _inputTextFieldHeight + _backgroundMargin * 2, 20);			graphics.endFill();						_inputTextField = CreateTextField.getNormalTextField(_defaultText, _fontSize, _fontColor);			_inputTextField.x = _backgroundMargin;			_inputTextField.y = _backgroundMargin;			_inputTextField.width = 200;			_inputTextField.type = TextFieldType.INPUT;			addChild(_inputTextField);						_inputTextField.addEventListener(MouseEvent.MOUSE_DOWN, onMDownInputTextField);		}				//////////////////////////////////////////////////////////////////////		//最初に入っているテキストを削除するメソッド		//////////////////////////////////////////////////////////////////////				private function onMDownInputTextField(e:MouseEvent):void {			_inputTextField.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownInputTextField);			_inputTextField.text = "";		}			}}