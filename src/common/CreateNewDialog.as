package common {	import aeon.events.AnimationEvent;	import flash.display.Sprite;	import flash.events.TimerEvent;	import flash.utils.Timer;	import aeon.animators.Tweener;	import aeon.easing.Quint;			public class CreateNewDialog {				public static const DIALOG_OPEN_TIME:int = 1000;		public static const DIALOG_CLOSE_TIME:int = 1000;				private var _newDIalog:Sprite;		private var _openTimer:Timer;		private var _closeTimer:Timer;		public function CreateNewDialog(newDialogClass:Class) {						//新しいダイアログを生成する			_newDIalog = Sprite(new newDialogClass);						//y軸をページの最下部に設定する			_newDIalog.y = MainContainer.IPHONE_HEIGHT;			//x軸はセンタリングする			_newDIalog.x = MainContainer.IPHONE_WIDTH / 2 - _newDIalog.width / 2;						//タイマーイベントを設定する			/*_openTimer = new Timer(30, 0);			_openTimer.addEventListener(TimerEvent.TIMER, onOpenTimer);*/						//ダイアログが開くアニメーションを実行			_global.mainContainer.addChild(_newDIalog);			var tweener:Tweener = new Tweener(_newDIalog, { y:Tweener.CURRENT_VALUE }, { y:0 }, DIALOG_OPEN_TIME, Quint.easeOut);			tweener.start();		}				//////////////////////////////////////////////////////////////////////		//ダイアログが開くアニメーションを行うメソッド		//////////////////////////////////////////////////////////////////////				private function onOpenTimer(e:TimerEvent):void {					}				//////////////////////////////////////////////////////////////////////		//ダイアログを閉じるアニメーションを実行するメソッド		//////////////////////////////////////////////////////////////////////				public static function closeDialog(targetDialog:Object):void {						//ダイアログを閉じるアニメーションを設定する			var targetDialogSprite:Sprite = Sprite(targetDialog);			var tweener:Tweener = new Tweener(targetDialogSprite, { y:0 }, { y:MainContainer.IPHONE_HEIGHT }, DIALOG_CLOSE_TIME, Quint.easeOut);			tweener.addEventListener(AnimationEvent.END, function(e:AnimationEvent):void {				//指定のダイアログを削除する				_global.mainContainer.removeChild(targetDialogSprite);				targetDialogSprite = null;			});			tweener.start();		}			}}