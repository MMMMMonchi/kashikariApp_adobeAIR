////////////////////////////////////////////////////////////////////////アイテム登録のダイアログを生成するクラス//////////////////////////////////////////////////////////////////////package ui.dialog.itemRegistrationDialog {	import common.CreateTestSprite;	import common.CreateNewDialog;	import flash.display.Bitmap;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.text.TextField;	import common.CreateTextField;	import common.InputTextFieldBase;	public class ItemRegistrationDialogBase extends Sprite{		[Embed(source="../../../uiImage/dialog/itemRegistrationDialog/itemRegistrationDialogBackground.png")]		private var _backImg:Class;		public function ItemRegistrationDialogBase() {						//背景画像を生成する			var backImg:Bitmap = new _backImg();			addChild(backImg);						makeContents();		}				private var _inputTextField:InputTextFieldBase;		private function makeContents():void {						//暫定の閉じるボタンを生成する			var testSprite:Sprite = CreateTestSprite.getTestRectangle(0xff00ff, 0.5, 150, 50);			testSprite.y = 15;			testSprite.x = 15;			addChild(testSprite);			testSprite.addEventListener(MouseEvent.CLICK, onMDownTestSprite);			var closeText:TextField = CreateTextField.getNormalTextField("キャンセル", 20);			testSprite.addChild(closeText);						//インプットテキストフィールドを生成する。			_inputTextField = new InputTextFieldBase(400, 50, "キーワードを入れて検索", 30, 0x000000);			_inputTextField.x = MainContainer.IPHONE_WIDTH / 2 - _inputTextField.width / 2;			_inputTextField.y = 100;			addChild(_inputTextField);		}				private function onMDownTestSprite(e:MouseEvent):void {			CreateNewDialog.closeDialog(this);		}			}}