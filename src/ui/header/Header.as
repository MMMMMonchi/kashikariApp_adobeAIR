////////////////////////////////////////////////////////////////////////画面上部のヘッダー部分を生成するクラス//////////////////////////////////////////////////////////////////////package ui.header {	import common.CreateNewPage;	import flash.display.Sprite;	import common.CreateTestSprite;	import common.CreateTextField;	import flash.events.MouseEvent;	import flash.text.TextField;	import common.CreateNewDialog;	import ui.page.loginPage.LoginPageBase;	import ui.dialog.itemRegistrationDialog.ItemRegistrationDialogBase;	public class Header extends Sprite{				public function Header() {						makeContents();		}				private function makeContents():void {			//---------------------------------------------------------------			//ページ上部の部分を生成する。			//---------------------------------------------------------------						//背景描画			var pageTopContents:Sprite = CreateTestSprite.getTestRectangle(0x00ff00, 0.5, MainContainer.IPHONE_WIDTH, 100);			addChild(pageTopContents);						//テキスト描画			var pageTopContentsText:TextField = CreateTextField.getNormalTextField("ＫＡＳＨＩＫＡＲＩ", 30);			pageTopContentsText.x = pageTopContents.width / 2 - pageTopContentsText.width / 2;			pageTopContentsText.y = pageTopContents.height / 2 - pageTopContentsText.height / 2;			pageTopContents.addChild(pageTopContentsText);			//アイテム登録ボタン			var itemRegistrationButton:Sprite = CreateTestSprite.getTestRectangle(0xff00ff, 0.5, 50, 50);			itemRegistrationButton.x = pageTopContents.width - itemRegistrationButton.width - 10;			itemRegistrationButton.y = pageTopContents.height / 2 - itemRegistrationButton.height / 2;			addChild(itemRegistrationButton);			itemRegistrationButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownItemRegistrationButton);						var itemRegistText:TextField = CreateTextField.getNormalTextField("追加", 20);			itemRegistrationButton.addChild(itemRegistText);					}				private function onMDownItemRegistrationButton(e:MouseEvent):void {			var createNewPage:CreateNewDialog = new CreateNewDialog(ItemRegistrationDialogBase);		}			}}