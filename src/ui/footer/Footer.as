package ui.footer {	import common.CreateNewPage;	import flash.display.Sprite;	import common.CreateTestSprite;	import flash.events.MouseEvent;	import flash.text.TextField;	import common.CreateTextField;	import ui.page.communicationPage.CommunicationPageBase;	import ui.page.friendItemPage.FriendItemPage;	public class Footer extends Sprite{				private var _friendItemPageButton:Sprite;		private var _myItemPageButton:Sprite;		private var _publicItemButton:Sprite;		private var _communicationButton:Sprite;		private var _settingButton:Sprite;		public function Footer() {			makeContents();		}				private function makeContents():void {			//---------------------------------------------------------------			//ページ下部の部分を生成する。			//---------------------------------------------------------------						//フッター部分を生成する。			//ボタンの横幅			var footerButtonWidth:int = MainContainer.IPHONE_WIDTH / 4;			//ボタンの高さ			var footerButtonHeight:int = 100;			//ボタンを一斉に作る			_friendItemPageButton = CreateTestSprite.getTestRectangle(0xff00ff, 0.5,footerButtonWidth,footerButtonHeight);			var friendText:TextField = CreateTextField.getNormalTextField("みつける",20);			_friendItemPageButton.addChild(friendText);						_myItemPageButton = CreateTestSprite.getTestRectangle(0x00ff00, 0.5, footerButtonWidth, footerButtonHeight);			var myitemText:TextField = CreateTextField.getNormalTextField("つたえる",20);			_myItemPageButton.addChild(myitemText);									/*_publicItemButton = CreateTestSprite.getTestRectangle(0xff00ff, 0.5, footerButtonWidth, footerButtonHeight);			var publicItemText:TextField = CreateTextField.getNormalTextField("おおやけ",20);			_publicItemButton.addChild(publicItemText);*/						_communicationButton = CreateTestSprite.getTestRectangle(0xff00ff, 0.5, footerButtonWidth, footerButtonHeight);			var communicationText:TextField = CreateTextField.getNormalTextField("やりとり",20);			_communicationButton.addChild(communicationText);						_settingButton = CreateTestSprite.getTestRectangle(0x00ff00, 0.5, footerButtonWidth, footerButtonHeight);			var settingText:TextField = CreateTextField.getNormalTextField("その他",20);			_settingButton.addChild(settingText);			//ボタンのX位置を設定			_friendItemPageButton.x = 0;			_myItemPageButton.x = _friendItemPageButton.x + footerButtonWidth;			//_publicItemButton.x = _myItemPageButton.x + footerButtonWidth;			_communicationButton.x = _myItemPageButton.x + footerButtonWidth;			_settingButton.x = _communicationButton.x + footerButtonWidth;			//貼る			addChild(_friendItemPageButton);			addChild(_myItemPageButton);			//addChild(_publicItemButton);			addChild(_communicationButton);			addChild(_settingButton);						//イベントを設定する			_friendItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);		}				//////////////////////////////////////////////////////////////////////		//友達タイムラインをボタンを押した際のメソッド		//////////////////////////////////////////////////////////////////////				private function onMDownFriendItemPageButton(e:MouseEvent):void {			_friendItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);			var crateNewPaga:CreateNewPage = new CreateNewPage(_global.mainContainer._pageContainer, _global.mainContainer._currentPage, FriendItemPage,_global.friendItemPage,onCreateFriendItemPageEnd);		}				private function onCreateFriendItemPageEnd():void {			_friendItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);		}				//////////////////////////////////////////////////////////////////////		//友達タイムラインをボタンを押した際のメソッド		//////////////////////////////////////////////////////////////////////				private function onMDownMyItemPageButton(e:MouseEvent):void {			_friendItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_communicationButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);			_myItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			var crateNewPaga:CreateNewPage = new CreateNewPage(_global.mainContainer._pageContainer, _global.mainContainer._currentPage, FriendItemPage,_global.friendItemPage,onCreateMyItemPageEnd);		}				private function onCreateMyItemPageEnd():void {			_friendItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);		}				//////////////////////////////////////////////////////////////////////		//やりとりボタンを押した際のメソッド		//////////////////////////////////////////////////////////////////////				private function onMDownCommunicationButton(e:MouseEvent):void {			_friendItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.removeEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);						var crateNewPaga:CreateNewPage = new CreateNewPage(_global.mainContainer._pageContainer, _global.mainContainer._currentPage, CommunicationPageBase,_global.communicationPage,onCreateCommunicationButton);		}				private function onCreateCommunicationButton():void {			_friendItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownFriendItemPageButton);			_myItemPageButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownMyItemPageButton);			_communicationButton.addEventListener(MouseEvent.MOUSE_DOWN, onMDownCommunicationButton);		}			}}