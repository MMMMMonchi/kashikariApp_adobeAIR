////////////////////////////////////////////////////////////////////////アプリケーションを起動して一番最初に生成されるコンテナ//////////////////////////////////////////////////////////////////////package  {	import flash.display.DisplayObject;	import flash.display.Sprite;	import ui.page.friendItemPage.FriendItemPage;	import ui.footer.Footer;	import ui.header.Header;	import common.CreateNewDialog;	import ui.dialog.loginDialog.LoginDialogBase;	import flash.display.Bitmap;	public class MainContainer extends Sprite{				[Embed(source="uiImage/page/friendItemPage/friendItemBackground.png")]		private var _embedImage:Class;		private var _backgroundImage:Bitmap;		public static const IPHONE_WIDTH:int = 640;		public static const IPHONE_HEIGHT:int = 960;		public var _currentPage:DisplayObject;		public var _pageContainer:Sprite;		public function MainContainer() {			_global.mainContainer = this;									//背景画像を一番最初に生成する			_backgroundImage = new _embedImage();			addChild(_backgroundImage);						//ページを載せるコンテナを生成する			_pageContainer = new Sprite();			addChild(_pageContainer);						makeInitPage();		}				//////////////////////////////////////////////////////////////////////		//最初のページを生成するメソッド		//////////////////////////////////////////////////////////////////////				private function makeInitPage():void {						//ページ上でヘッダーやフッターにアクセスできるようにページより先に生成する			makeFooter();						makeHeader();						var initPage:Sprite = new FriendItemPage();			_currentPage = initPage;			_pageContainer.addChild(initPage);									var createInitLoginDialog:CreateNewDialog = new CreateNewDialog(LoginDialogBase);		}				//////////////////////////////////////////////////////////////////////		//フッターを生成するメソッド		//////////////////////////////////////////////////////////////////////				private function makeFooter():void {			//フッター部分を生成する。			//フッター部分のｙ座標			var footerPositionY:int = MainContainer.IPHONE_HEIGHT - 100;			var footer:Footer = new Footer();			footer.y = footerPositionY;			addChild(footer);						_global.footer = footer;		}				//////////////////////////////////////////////////////////////////////		//ヘッダーを生成するメソッド		//////////////////////////////////////////////////////////////////////				private function makeHeader():void {			//ヘッダー部分を生成する。			var header:Header = new Header();			addChild(header);						_global.header = header;		}	}}